{
  "name": "@repo/logger",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "ts:check": "tsc --noEmit",
    "test:local:node": "tsx test/test-logger.ts",
    "test:local:browser": "pnpm test:browser:build && pnpm test:browser:serve",
    "test:browser:build": "tsx test/browser/build.js",
    "test:browser:serve": "npx http-server test/browser -o"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "esbuild": "^0.25.4",
    "http-server": "^14.1.1",
    "tsx": "^4.19.4"
  },
  "dependencies": {
    "@axiomhq/js": "^1.3.1",
    "@axiomhq/pino": "^1.3.1",
    "pino": "^9.6.0"
  }
}
