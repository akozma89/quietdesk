{
  "name": "quietdesk",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "fix": "pnpm format:fix && pnpm lint:fix",
    "lint:fix": "turbo run lint:fix",
    "lint:check": "turbo run lint",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "ts:check": "turbo run ts:check",
    "prepare": "husky",
    "pre-push": "pnpm lint:check && pnpm format:check && pnpm ts:check",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --check",
      "eslint"
    ],
    "*.{json,md}": [
      "prettier --check"
    ]
  }
}
